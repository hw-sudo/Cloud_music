/* pages/songlist/songlist.wxss */
/* 轮播图样式设置 
    swiper-item会跟swiper的宽高一致
*/
.imageContainer{
  width: 100%;
  height: 300rpx;
}
/*imageContainer里面的所有image标签都会执行的样式  */
.imageContainer image{
  width: 100%;
  height: 100%;
}
/* 歌曲列表样式 */
.musicContainer{
  width: 100%;
  height: 150rpx;
  background-color: rgb(216, 213, 213);
  margin-top: 10rpx;
  /* 设置弹性盒子布局 flex:flexible box
      给父容器设置弹性盒子布局之后，内部的子容器会自动分配父容器的空间
      子容器分配的方向取决于轴(主轴(水平)和交叉轴(垂直),默认是主轴
   */
  display: flex;
}
/* left左边存放封面标签的样式 */
.left{
  width: 150rpx;
  height: 150rpx;
  /* background-color: blue; */
}
/* 封面图片 */
.left image{
  width: 140rpx;
  height: 140rpx;
  /* 设置所有的外边距都是5rpx */
  margin: 5rpx;
  /* 边框圆角化 */
  border-radius: 10%;
}
/* center歌曲信息的样式 */
.center{
  width: 450rpx;
  height: 150rpx;
  /* background-color: yellow; */
  position: relative;
}
/* 歌曲名称的样式 */
.songName{
  color: white;
  font-size: 40rpx;
  /* 设置左内边距 */
  padding-left: 20rpx;
  /* 调节上内边距 */
  padding-top: 20rpx;
  /* 溢出时隐藏 */
  overflow: hidden;
  /* 文本不进行换行 */
  white-space: nowrap;
  /* 文本超出部分显示省略号 */
  text-overflow: ellipsis;
}
/* 歌手和专辑的样式 */
.singerName{
  color: white;
  font-size: 32rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  /* 溢出时隐藏 */
  overflow: hidden;
  /* 文本不进行换行 */
  white-space: nowrap;
  /* 文本超出部分显示省略号 */
  text-overflow: ellipsis;
}
/* mv图标的样式 */
.mv{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0rpx;
  top: 15rpx;
}
/* right右边播放图标的样式 */
.right{
  width: 150rpx;
  height: 150rpx;
  /* background-color: green; */
}
/* 调整播放图标的样式 */
.right image{
  width:100rpx;
  height: 100rpx;
  margin-left: 27rpx;
  margin-top: 25rpx;
}
.search-area{
  width: 100%;
  height: 100rpx;
  /* background-color: black; */
  /* 弹性盒布局 */
  display: flex;
}
.cancel {
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 14px;
  height: 68rpx;
  line-height: 68rpx;
}
.search-box-wrapper {
  position: fixed;
  top:0;
  width:95%;
  background: #f4f4f4;
  padding: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-align: center;
  z-index:1;
}

.search-box {
  position: relative;
  border-radius: 3px;
  background: #fff;
  height: 40rpx;
  line-height: 40rpx;
  padding: 16rpx 24rpx 16rpx 70rpx;
  -webkit-box-flex: 1;
}
.search-box .cc {
  position: absolute;
  top: 9px;
  right: 12px;
  width: 18px;
  height: 18px;
  background: #b1b1b1;
  text-indent: -9999px;
  border-radius: 99px;
  z-index:999;
}
.icon {
  position: absolute;
  top: 18rpx;
  left: 20rpx;
  width: 36rpx;
  height: 36rpx;
  background-repeat: no-repeat;
  background-size: cover;
  /* text-indent: -999px; */
}

.hot_keys {
