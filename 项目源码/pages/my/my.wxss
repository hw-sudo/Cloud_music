/* pages/nav/nav.wxss */
/* 导航条的样式 */
.nav{
  width: 100%;
  height: 80rpx;
  background-color: rgb(229, 230, 229);
  color: rgb(0, 0, 0);
  display: flex;
}
/* 导航条内部每个元素的样式 */
.nav view{
  width:25%;
  height: 100%;
  text-align: center;
  line-height: 80rpx; 
  box-sizing: border-box;
}
/* 导航条内部被选中时执行的样式 */
.nav .current-nav{
  border-bottom: #cbdada solid 5rpx;
  font-weight: 700;
}
.swiper-content{
  background-color:rgb(255, 255, 255);
  width: 100%;
  height: 100%;
}